@model IEnumerable<Blog.Domains.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    a {
        color: white;
        text-decoration:none;
        
    }
        a:hover {
            color: white;
        }
        h2{
            margin-top:10px;
            padding:10px;
            background-color:antiquewhite;
           border-radius:10px;
        }
</style>
<h2>Danh sách</h2>


    <a href="@Url.Action("Create", "Category")" style="color:white;" class="btn btn-primary mb-3 mt-3"><i class="fas fa-plus"></i></a>

<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedOn)
        </th>
        <th>Thao tác</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @if (item.Description==null || item.Description.Length <= 10)
            {
            <p>@item.Description</p>

            }
            else if (item.Description.Length > 10)
            {
                var description = item.Description.Substring(0, 10) + " ...";
                @description

            }
        </td>
        <td>
            @if (item.Status == 0)
            {
                <p>Hoạt động</p>
            }
            else
            {
                <p>Không hoạt động</p>

            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedOn)
        </td>
        <td>
            

            <a href="@Url.Action("Details", "Category", new {id=item.Id})" style="margin-right: 10px; color:skyblue"><i class="fas fa-eye"></i></a>

            <a href="@Url.Action("Edit", "Category", new {id=item.Id})" style="margin-right:10px;color:gray;"><i class="fas fa-edit"></i></a>

            <a href="@Url.Action("Delete", "Category", new {id=item.Id})" style="color:#ff4949;"><i class="fas fa-trash"></i></a>
        </td>
    </tr>
}

</table>
