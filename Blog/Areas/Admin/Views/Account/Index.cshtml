@model IEnumerable<Blog.Domains.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: white;
        }

    h2 {
        margin-top: 10px;
        padding: 10px;
        background-color: antiquewhite;
        border-radius: 10px;
    }
</style>
<h2>Danh sách</h2>

<a href="@Url.Action("Create", "Account")" style="color:white;" class="btn btn-primary mb-3 mt-3"><i class="fas fa-plus"></i></a>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassWord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <b>********</b>
            </td>
            <td>
                @if (item.Status == true)
                {
                    <p>Hoạt động</p>
                }
                else
                {
                    <p>Không hoạt động</p>

                }
            </td>
            <td>
                <a href="@Url.Action("Details", "Account", new {id=item.Id})" style="margin-right: 10px; color:skyblue"><i class="fas fa-eye"></i></a>

                <a href="@Url.Action("Edit", "Account", new {id=item.Id})" style="margin-right:10px;color:gray;"><i class="fas fa-edit"></i></a>

                <a href="@Url.Action("Delete", "Account", new {id=item.Id})" style="color:#ff4949;"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }

</table>
