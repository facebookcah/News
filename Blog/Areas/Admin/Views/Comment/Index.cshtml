@model IEnumerable<Blog.Domains.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: white;
        }

    h2 {
        margin-top: 10px;
        padding: 10px;
        background-color: antiquewhite;
        border-radius: 10px;
    }
</style>
<h2>Danh sách</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            Tiêu đề bài viết
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @if (item.Post.Title.Length > 30)
                {
                    var title = item.Post.Title.Substring(0, 30) + "...";
                    <p>@title</p>
                }
                else
                {
                    <p>@item.Post.Title</p>
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @if (item.Status == 0)
                {
                    <p>Hiện</p>
                }
                else
                {
                    <p>Ẩn</p>

                }
            </td>

            <td>
                <a href="@Url.Action("Details", "Comment", new {id=item.Id})" style="margin-right: 10px; color:skyblue"><i class="fas fa-eye"></i></a>

                <a href="@Url.Action("Edit", "Comment", new {id=item.Id})" style="margin-right:10px;color:gray;"><i class="fas fa-edit"></i></a>



            </td>
        </tr>
    }

</table>
